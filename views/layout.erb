<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= @title  %></title>

  <link rel="stylesheet" href="/stylesheets/book_viewer.css">
</head>

<body>

  <div id="menu">
    <div class="pure-menu">
      <a class="pure-menu-heading" href="/">Table of Contents</a>

      <ul class="pure-menu-list">
        <% @toc.each_with_index do |chapter_name, idx| %>
          <li class="pure-menu-item">
            <a href="/chapters/<%= idx + 1 %>" class="pure-menu-link"><%= chapter_name %></a>
          </li>
        <% end %>
      </ul>
    </div>

    <br>
    <a href="/search" id="search">Search</a>
  </div>

  <div id="main">
    <div class="header">
      <h1><%= @title %></h1>
      <h2>by Sir Arthur Doyle</h2>
    </div>

    <div class="content">
      <%= yield %>
    </div>
  </div>



<script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
